<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Redirect all HTTP requests to HTTPS -->
        <rule name="HTTP to HTTPS redirect" stopProcessing="true">
          <match url="(.*)" ignoreCase="true" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
        </rule>

        <!-- Canonical host: force apex domain qusai.shop (avoid www) -->
        <rule name="Force apex host" stopProcessing="true">
          <match url="(.*)" ignoreCase="true" />
          <conditions logicalGrouping="MatchAll">
            <add input="{HTTPS}" pattern="on" ignoreCase="true" />
            <add input="{HTTP_HOST}" pattern="^www\.qusai\.shop$" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://qusai.shop/{R:1}" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
    <httpProtocol>
      <customHeaders>
        <!-- HSTS: force HTTPS in browsers for one year -->
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains; preload" />
        <!-- Upgrade any HTTP resources to HTTPS on HTTPS pages -->
        <add name="Content-Security-Policy" value="upgrade-insecure-requests" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>
